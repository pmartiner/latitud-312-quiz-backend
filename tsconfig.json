{
    "compilerOptions": {
      "sourceMap": true,
      "noImplicitAny": false,
      "module": "commonjs",
      "target": "es5",
      "lib": [
        "es5",
        "es2015",
        "scripthost",
        "es2017",
        "es2016",
        "esnext",
        "dom",
        "dom.iterable"
      ],
      "removeComments": true,
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "downlevelIteration": true,
      "forceConsistentCasingInFileNames": true,
      "importHelpers": true,
      "strict": true,
      "typeRoots": ["@types"],
      "baseUrl": "./",
      "outDir": "./dist",
      "paths": {
        "common/*": [
          "common/*"
        ],
        "routes/*": [
          "routes/*"
        ],
        "views/*": [
          "views/*"
        ]
      }
    },
    "include": [
      "./*",
      "routes/**/*.ts",
      "db/**/*.ts",
      "app.ts",
    ],
    "exclude": [
        "./dist/**",
        "node_modules",
        "**/*.spec.ts"
    ]
  }